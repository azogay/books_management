{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1 class="text-center fw-bold m-4 text-primary text-uppercase">Book details</h1>

    <table class="table">
        <tbody >
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ book.reference }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ book.name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Review</th>
                <td>{{ book.review }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ book.note }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ book.creationDate ? book.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModificationDate</th>
                <td>{{ book.modificationDate ? book.modificationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
<div>
    <a type="button" class="btn btn-primary col-3" href="{{ path('app_book_index') }}">back to list</a>

    <a type="button" class="btn btn-success col-3" href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}
</div>
    
{% endblock %}
